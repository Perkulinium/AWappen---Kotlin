<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<fragment
          android:id="@+id/map"
          tools:context=".MapAndDetailsMapsActivity"
          android:name="com.google.android.gms.maps.SupportMapFragment"
    map:layout_constraintEnd_toEndOf="parent" android:layout_width="0dp" android:layout_height="0dp"
    map:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp" map:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200dp"
    map:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    <TextView
            android:text="aw place name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/textView"
            map:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginEnd="10dp" android:textSize="24sp"/>
    <Button
            android:text="fav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/button" android:layout_marginTop="10dp"
            map:layout_constraintTop_toTopOf="parent" map:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="10dp" map:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" android:textSize="10sp"/>

</android.support.constraint.ConstraintLayout>