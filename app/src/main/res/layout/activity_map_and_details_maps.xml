<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/aColor">

    <fragment
            android:id="@+id/map"
            tools:context=".MapAndDetailsMapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            map:layout_constraintEnd_toEndOf="parent" android:layout_width="0dp" android:layout_height="0dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"
            map:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" map:srcCompat="@drawable/beer"
            android:id="@+id/imageView" map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
            map:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="aw place name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/textView"
            map:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginEnd="10dp" android:textSize="24sp"
            android:textColor="@android:color/white" android:fontFamily="serif"/>
    <Button
            android:text="fav"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/button" android:layout_marginTop="10dp"
            map:layout_constraintTop_toTopOf="parent" map:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="10dp" map:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" android:textSize="10sp"/>
    <TextView
            android:text="Opening hours:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" map:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" map:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textColor="@android:color/white" android:textSize="18sp"/>
    <TextView
            android:text="Adress:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" map:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" map:layout_constraintTop_toBottomOf="@+id/textView7"
            android:textColor="@android:color/white" android:textSize="18sp"/>
    <TextView
            android:text="Website:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginTop="10dp"
            map:layout_constraintTop_toBottomOf="@+id/textView8" map:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:textColor="@android:color/white" android:textSize="18sp"/>
    <TextView
            android:text="data from fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" map:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            map:layout_constraintTop_toBottomOf="@+id/imageView" android:textColor="@android:color/white"
            android:textSize="18sp"/>
    <TextView
            android:text="data from fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            map:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            map:layout_constraintTop_toBottomOf="@+id/textView10" android:textColor="@android:color/white"
            android:textSize="18sp"/>
    <TextView
            android:text="data from fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            map:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="10dp"
            map:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="10dp"
            android:textColor="@android:color/white" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>